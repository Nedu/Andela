<% include partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">New Student</div>
	<form class="ui form" action="/students" method="POST">
		<div class="field">
			<label>Name</label>
			<input type="text" name="student[name]" placeholder="name">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="student[image]" placeholder="image">
		</div>
		<div class="field">
			<label>Email</label>
			<input type="text" name="student[email]" placeholder="email">
		</div>
		<div class="field">
			<label>Date of Birth</label>
			<input type="text" name="student[dateofbirth]" placeholder="dateofbirth">
		</div>
		<div class="field">
			<label>Department</label>
			<input type="text" name="student[department]" placeholder="department">
		</div>
		<div class="field">
			<label>Phone</label>
			<input type="text" name="student[phone]" placeholder="phone">
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
</div>

<% include partials/footer %>