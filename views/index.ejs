<% include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">Students Directory</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% students.forEach( function(student) { %>
				<div class="item">
					<div class="image">
						<img src="<%= student.image %>" >
					</div>
					<div class="content">
						<a class="header" href="/students/<%=student._id%>"><%= student.name %></a>
						<div class="meta">
							<span>Department: <%= student.department %></span>
						</div>
						<div class="description">
							<p>Email: <%= student.email %></p>
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/students/<%= student._id %>">Read More<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>



<% include partials/footer %>